//Generate prisma client
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}
//Set data source and connect url
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
///Basic model for product
model Product {
  id          String   @id @default(cuid())
  name        String
  description String? //nullable
  price       Int
  imageUrl    String? //nullable
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  //isFeatured Boolean @default(false)     // Featured item for recommend list
  //inventory  Int     @default(0)         // For Inventory control
  //published  Boolean @default(true)      // Enable hidden product feature
  //updatedAt  DateTime @updatedAt         // Auto track last update
}



model Category {
  id       String    @id @default(cuid())
  name     String
  products Product[]
}